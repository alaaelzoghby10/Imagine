@model IEnumerable<akhbarna.Models.news>
@{
    ViewBag.Title = "الرئيسية";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


@*Model.Take(5)*@


<div class="container" style="margin-top:30px">

   
    <marquee direction="right" style="margin:30px;font-weight:bold;border:1px solid gray;padding:15px">
        @foreach (var item in Model)
        {
               <span><a href="/news/details/@item.id" style="color:red;text-decoration:underline">@item.title</a><span style="color:black;margin-right:8px;font-size:40px"> . . . . </span></span>
        }
    </marquee>
    <div class="row" style="text-align:right;">

   @foreach (var item in Model)
   {
      
        <div class="col-sm-4" style="margin-bottom:40px">
               <a href="/news/index/@item.category"><span style="font-weight:bold;background-color:gold;font-size:large;color:black">@item.category</span> </a><h2>@item.title</h2>
                <a href="/news/details/@item.id"><img class="img-fluid" src="~/images/@Url.Content(@item.image)" style="height: 196.767px" alt="@item.title" title="@item.title"/></a>
            @if(item.details.Length>63)
            {
                <p>@item.details.Substring(0,63) ....</p>
            }
            else
            {
                 <p>@item.details</p>
            }
                <a class="btn-link" href="/news/details/@item.id">تفاصيل الخبر</a><br />
            @item.views مشاهدة 
            <h5> @item.date</h5>
            @if (Session["admin"] != null)
            {
                <a href="/news/delete/@item.id">حذف الخبر</a>
            }
             
           
       </div>
       
   }
    </div>

</div>



